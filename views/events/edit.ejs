<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit <%= event.name %></h1>
            <div style="width: 40%; margin: 40px auto;">
                <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        Name: <br>
                        <input class="form-control" type="text" name="event[name]" value="<%= event.name %>" required>
                    </div>
                    
                    <div class="form-group">
                        Description: <br>
                        <input class="form-control" type="text" name="event[desc]" value="<%= event.desc %>" required>
                    </div>
                    
                    <div class="form-group">
                        Type: <br>
                        <input type="radio" name="event[type]" value="Cardinal"> Cardinal
                    </div>
                    
                    <div class="form-group">
                        <input type="radio" name="event[type]" value="Stone"> Stone
                    </div>
                    
                    <div class="form-group">
                        <input type="radio" name="event[type]" value="N/A" checked> N/A
                    </div>
                    
                    <div class="form-group">    
                        Datetime: <br>
                        <input class="form-control" type="datetime-local" name="event[datetime]" value="<%= event.datetime %>" required>
                    </div>
                    
                    <div class="form-group">    
                        Location: <br>
                        <input class="form-control" type="text" name="event[place]" value="<%= event.place %>" required>
                    </div>
                    <div class="form-group">    
                        Image URL: <br>
                        <input class="form-control" type="text" name="event[image]" value="<%= event.image %>" required>
                    </div>
                        
                    <div class="form-group">    
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/events">Go to Events</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>