<html>
    <head>
        <link rel="shortcut icon" type="image/x-icon" href="../img/favicon.ico" />
        <title>ΑΣΦ Events</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="../css/style.css" />
    </head>
    
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img src="../img/asp.png" style="height: 50px; margin-top: -15px;">
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Signup</a></li>
                        <li><a href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">ΑΣΦ Events</p>
                <div class="list-group">
                    <a href="/events" id="noLine"><li class="list-group-item active">Back to Events</li></a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= event.image %>">
                    <div class="caption-full">
                        <h4 class="pull-right"><p>Type: <%= event.type %> </p></h4>
                        <h3><%= event.name %></h3>
                        <p>Place: <%= event.place %></p>
                        <p>Date & Time: <%= event.datetime %></p>
                        <p><%= event.desc %></p>
                        <!--<p>Submitted by: <//%= event.author.username %></p>-->
                    </div>
                </div>
            </div>
        </div>    
    </div>

<% include partials/footer %>